<div class="container">
  <% if article.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="row justify-content-center">
    <%= form_with(model: article, class: "shadow-sm p-3 mb-3 bg-info rounded") do |form| %>
      <div class="form-group row">
        <%= form.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of the article" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <%= form.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
        </div>
      </div>

      <div class="form-group text-center justify-content-center mt-2">
        <%= form.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>

    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-center text-info" %>
  </div>
</div>
