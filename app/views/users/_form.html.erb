<div class="container">
  <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @user %>

    <%= form_with(model: @user, class: "shadow-sm p-3 mb-3 bg-info rounded") do |form| %>
      <div class="form-group row">
        <%= form.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <%= form.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email laddresss" %>
        </div>
      </div>

      <div class="form-group row mt-2">
        <%= form.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group text-center justify-content-center mt-2">
        <%= form.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>

    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-center text-info mb-3" %>
  </div>
</div>
